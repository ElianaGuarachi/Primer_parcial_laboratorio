
#ifndef PEDIDOS_H_
#define PEDIDOS_H_

#include "Clientes.h"
#define PENDIENTE 1
#define COMPLETADO 2

typedef struct
{
	int idPedido;
	int cantidadKilos;
	int estado;
	int pAltaDensidad;
	int pBajaDensidad;
	int polipropileno;
	int idCliente;
	int isEmpty;
}ePedidos;

int InicializarListaDePedidos(ePedidos pedidos[], int cantidad);
int BuscarLugarLibrePedidos(eClientes pedidos[], int cantidad);
int BuscarPedidosPorId(ePedidos pedidos[], int cantidad, int id);
int AltaPedidoDeRecoleccion(eClientes clientes[], int tam_clientes, ePedidos pedidos[], int tam_pedidos, int* idPedidos);

#endif /* PEDIDOS_H_ */
